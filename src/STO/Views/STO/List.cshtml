@{
    ViewData["Title"] = "STO";
}
@model IEnumerable<STO.ViewModels.STORatingViewModel>
<style type="text/css">
    h2 {
        text-align: center;
    }
</style>
<form method="post" asp-controller="STO" asp-action="List">
    <p><b>Услуги</b></p>
    <p>
        <input type="checkbox" name="DWS" value="ремонт ДВС">ремонт ДВС<Br>
        <input type="checkbox" name="Podveska" value="ремонт подвески">ремонт подвески<Br>
        <input type="checkbox" name="Kuzov" value="ремонт кузовного железа">ремонт кузовного железа<Br>
        <input type="checkbox" name="Shinomontoj" value="шиномонтаж">шиномонтаж<Br>
        <input type="checkbox" name="Dvigatel" value="регулировка узлов двигателяs">регулировка узлов двигателяs
    </p>
    <select name="Rajon">
        <option value="">Все районы</option>
        <option value="Кировский">Кировский</option>
        <option value="Ленинский">Ленинский</option>
        <option value="Октябрьский">Октябрьский</option>
        <option value="Советский">Советский</option>
        <option value="Центральный">Центральный</option>
    </select>
    <p></p>
    <p><input class="btn" type="submit" value="Подобрать"></p>
</form>
<h2>Список СТО</h2>

<tr>
    <td>
        Название
    </td>
    <td>
        Оценка
    </td>
</tr>
<table class="table">
    @foreach (var user in Model)
            {

        <tr>
            <td>
                <a href="STO/Index/@user.Id">@user.Name</a>
            </td>
            <td>
                @user.Raiting
            </td>
        </tr>

    }
</table>
